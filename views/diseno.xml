<odoo>
    <data>
        <record model='ir.ui.view' id='vista_estudioanimacion_design_tree'>
            <field name="name">vista_estudioanimacion_design_tree</field>
            <field name="model">estudioanimacion.diseno</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nombre"/>
                    <field name="descripcion"/>
                    <field name="supervisor_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="vista_estudioanimacion_design_form">
            <field name="name">vista_estudioanimacion_design_form</field>
            <field name="model">estudioanimacion.diseno</field>
            <field name="arch" type="xml">
                <form string="design_form">
                    <sheet>
                        <group name="group_top">
                            <field name="nombre"/>
                            <field name="descripcion"/>
                            <field name="supervisor_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="accion_estudioanimacion_design_form">
            <field name="name">Lista de diseños</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">estudioanimacion.diseno</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Diseños</p>
                <p>Click <strong>'Crear'</strong> para añadir nuevos diseños</p>
            </field>
        </record>

        <menuitem name="Estudio de animación" id="menu_estudioanimacion_raiz"/>
        <menuitem name="Administración" id="menu_estudioanimacion_administracion" parent="menu_estudioanimacion_raiz"/>
        <menuitem name="Diseños" id="menu_estudioanimacion_design_list" parent="menu_estudioanimacion_administracion" action="accion_estudioanimacion_design_form"/>
    </data>
</odoo>