<odoo>
    <data>
        <record model="ir.ui.view" id="vista_estudioanimacion_director_form">
            <field name="name">vista_estudioanimacion_director_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"></field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <xpath expr="//sheet/notebook/page[@name='internal_notes']" position="after">
                    <page name="directors" string="Directores">
                        <group>
                            <group>
                                <field name="is_director"/>
                                <field name="proyecto_id"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="accion_estudioanimacion_director_window">
            <field name="name">Directores</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_director', '=', True)]</field>
        </record>

        <record model="ir.actions.act_window.view" id="estudioanimacion.action_view_director_tree">
            <field name="sequence" eval="1"></field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="base.view_partner_tree"></field>
            <field name="act_window_id" ref="accion_estudioanimacion_director_window"></field>
        </record>

        <record model="ir.actions.act_window.view" id="estudioanimacion.action_view_director_form">
            <field name="sequence" eval="2"></field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="vista_estudioanimacion_director_form"></field>
            <field name="act_window_id" ref="accion_estudioanimacion_director_window"></field>
        </record>

        <menuitem name="Estudio de animación" id="menu_estudioanimacion_raiz"/>
        <menuitem name="Administración" id="menu_estudioanimacion_administracion" parent="menu_estudioanimacion_raiz"/>
        <menuitem name="Directores" id="menu_estudioanimacion_lista_directores" parent="menu_estudioanimacion_administracion" action="accion_estudioanimacion_director_window"/>
    </data>
</odoo>